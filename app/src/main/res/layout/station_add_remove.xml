<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="5dp"
		android:paddingRight="5dp" >

		<fragment
			android:id="@+id/main_hub_fragment"
			android:name="fr.piconsoft.eoit.ui.MainHubsStationListFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout="@layout/station_row_favorite" >
		</fragment>

		<fragment
			android:id="@+id/assets_fragment"
			android:name="fr.piconsoft.eoit.ui.AssetsStationListFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout="@layout/station_row_favorite" >
		</fragment>
	</LinearLayout>

</ScrollView>