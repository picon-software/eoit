<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="85dp"
	android:paddingLeft="2dp"
	android:paddingRight="2dp"
	android:paddingTop="2dp" >

	<TextView
		android:id="@+id/station_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="2dp"
		android:layout_marginLeft="2dp"
		android:layout_marginTop="2dp"
		android:layout_toLeftOf="@+id/favorite_station"
		android:layout_toRightOf="@+id/station_icon"
		android:ellipsize="end"
		android:maxLines="2"
		android:text="Caldari Business Tribunal Bureau Offices"
		android:textColor="@android:color/primary_text_dark"
		android:textSize="22sp"
		android:textStyle="normal" />

	<TextView
		android:id="@+id/location_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/station_name"
		android:layout_below="@+id/station_name"
		android:layout_marginLeft="2dp"
		android:layout_toLeftOf="@+id/favorite_station"
		android:ellipsize="start"
		android:singleLine="true"
		android:text="The Forge > Jita IV - Moon 4"
		android:textSize="11sp" />

	<CheckBox
		android:id="@+id/favorite_station"
		android:button="@drawable/btn_star_holo_dark"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_margin="10dp" />

	<ImageView
		android:id="@+id/station_icon"
		android:layout_width="45dp"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginRight="2dp"
		android:contentDescription="@string/station"
		android:scaleType="centerCrop" />

</RelativeLayout>