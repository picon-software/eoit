<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="24dp"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:background="@android:color/white"
	tools:context=".activity.premium.ItemInfoActivity">

	<ImageView
		android:id="@+id/skill_chk_ok"
		android:layout_width="15dp"
		android:layout_height="15dp"
		android:layout_alignBottom="@+id/item_name"
		android:layout_alignTop="@+id/item_name"
		android:layout_marginLeft="50dp"
		android:contentDescription="@string/unknown"
		android:src="@drawable/icon_ok_premium" />

	<ImageView
		android:id="@+id/skill_chk_ko"
		android:layout_width="15dp"
		android:layout_height="15dp"
		android:layout_alignBottom="@+id/item_name"
		android:layout_alignTop="@+id/item_name"
		android:layout_marginLeft="50dp"
		android:contentDescription="@string/unknown"
		android:src="@drawable/icon_ko_premium" />

	<TextView
		android:id="@+id/item_name"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="72dp"
		android:layout_toLeftOf="@+id/skill_level_icon"
		android:gravity="center_vertical"
		tools:text="Gallentean Starship Engineering" />

	<ImageView
		android:id="@+id/required_skill_level_icon"
		android:layout_width="50dp"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/item_name"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/item_name"
		android:layout_marginRight="16dip"
		android:contentDescription="@string/unknown"
		android:src="@drawable/level4_required" />

	<ImageView
		android:id="@+id/skill_level_icon"
		android:layout_width="50dp"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/item_name"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/item_name"
		android:layout_marginRight="16dip"
		android:contentDescription="@string/unknown"
		android:src="@drawable/level2" />

</RelativeLayout>