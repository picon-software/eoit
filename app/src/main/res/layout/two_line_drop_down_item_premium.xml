<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:background="@drawable/bg_selector_white"
	android:minHeight="?android:attr/listPreferredItemHeight">

	<TextView
		android:id="@android:id/text1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="72dp"
		android:layout_alignTop="@+id/item_icon"
		android:layout_marginRight="16dp"
		android:ellipsize="marquee"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceMedium"
		tools:text="Collision Management" />

	<TextView
		android:id="@android:id/text2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="72dp"
		android:layout_marginRight="16dp"
		android:ellipsize="marquee"
		android:layout_below="@android:id/text1"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="12sp"
		tools:text="ML -1 • PL -1 • Max run +2 • Probability x1.1" />

	<ImageView
		android:id="@+id/item_icon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="4dp"
		android:contentDescription="@string/itemIcon"
		android:src="@drawable/unknown" />

</RelativeLayout>