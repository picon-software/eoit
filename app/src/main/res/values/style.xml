	<style name="Widget.ActionBar.Blue" parent="android:Widget.ActionBar">
		<item name="android:background">@drawable/bg_action_bar_blue</item>
	</style>

	<style name="Widget.ActionBar.Transparent" parent="android:Widget.ActionBar">
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="EOIT.Fullscreen" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowTitleSize">0dp</item>
	</style>

	<style name="EOIT.Dark" parent="Theme.AppCompat">
	</style>

	<style name="EOIT.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
	</style>

	<style name="EOIT.Dark.BlueActionBar" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/blue_premium</item>
		<item name="colorPrimaryDark">@color/dark_blue_premium</item>
		<item name="colorAccent">@color/blue_premium</item>
	</style>

	<style name="EOIT.RedActionBar" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/red_premium</item>
		<item name="colorPrimaryDark">@color/dark_red_premium</item>
	</style>

	<style name="EOIT.Light.DarkActionBar.Overlay" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="EOIT.ActionBar.Overlay" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
		<item name="android:windowActionBarOverlay">true</item>
	</style>

    <style name="card_popup_anchor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_menu_moreoverflow_holo_dark</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
    </style>
